
<div class="container text-center">
  <div class="col-xs-12 col-sm-6 col-sm-offset-2" id="form">
    <%= form_for (@article) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", id: "text_area" %>
    <%= f.submit class: "btn btn-info"%>
<% end %>
  </div>
</div>


